{
    "server": {
        "port": 8090,
        "host": "localhost",
        "wsPath": "/ws"
    },
    "data": {
        "accountsPath": "data/accounts.json",
        "balancesPath": "data/balances.json",
        "assetsPath": "data/assets.json",
        "walletPath": "wallet.json"
